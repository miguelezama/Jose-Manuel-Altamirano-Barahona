<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:background="#EBEEF5">
    <EditText
            android:layout_width="155dp"
            android:layout_height="45dp"
            android:inputType="numberSigned"
            android:ems="10"
            android:id="@+id/idDeuda" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="124dp" app:layout_constraintStart_toEndOf="@+id/spNombre"
            android:layout_marginLeft="44dp" android:layout_marginStart="44dp" android:background="#03A9F4"
            android:text="Deuda"/>
    <Spinner
            android:layout_width="142dp"
            android:layout_height="53dp"
            android:id="@+id/spNombre" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="27dp"
            android:layout_marginStart="27dp"
            android:background="#03A9F4" android:layout_marginTop="7dp"
            app:layout_constraintTop_toBottomOf="@+id/textView4"/>
    <TextView
            android:layout_width="143dp"
            android:layout_height="40dp" android:id="@+id/etDate"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="224dp"
            android:layout_marginStart="224dp" android:layout_marginTop="88dp"
            app:layout_constraintTop_toBottomOf="@+id/idDeuda" android:background="#03A9F4"
    />
    <TextView
            android:text="Nombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4" android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="27dp"
            android:layout_marginStart="27dp" android:layout_marginTop="9dp"
            app:layout_constraintTop_toBottomOf="@+id/textView6"/>
    <TextView
            android:text="Deuda"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView5" android:textSize="24sp"
            app:layout_constraintStart_toEndOf="@+id/textView4" android:layout_marginLeft="86dp"
            android:layout_marginStart="86dp" android:layout_marginTop="9dp"
            app:layout_constraintTop_toBottomOf="@+id/textView6"/>
    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="347dp"
            android:layout_height="293dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            android:id="@+id/rvClientes" android:background="#03A9F4" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/etBuscar" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="32dp" app:layout_constraintVertical_bias="0.786"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/etBuscar"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/etDate" app:layout_constraintStart_toEndOf="@+id/imageView2"
            android:layout_marginLeft="22dp" android:layout_marginStart="22dp"/>
    <Spinner
            android:layout_width="191dp"
            android:layout_height="60dp"
            android:id="@+id/spOpcion" android:layout_marginTop="13dp"
            app:layout_constraintTop_toBottomOf="@+id/spNombre" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="27dp" android:layout_marginStart="27dp"/>
    <ImageView
            android:layout_width="75dp"
            android:layout_height="56dp" app:srcCompat="@drawable/save" android:id="@+id/imageView"
            android:layout_marginTop="21dp"
            app:layout_constraintTop_toBottomOf="@+id/idDeuda" android:layout_marginLeft="35dp"
            android:layout_marginStart="35dp" app:layout_constraintStart_toEndOf="@+id/spOpcion"/>
    <ImageView
            android:layout_width="76dp"
            android:layout_height="57dp" app:srcCompat="@drawable/buscar" android:id="@+id/imageView2"
            android:layout_marginTop="83dp"
            app:layout_constraintTop_toBottomOf="@+id/spOpcion" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="57dp" android:layout_marginStart="57dp"
    />
    <TextView
            android:text="REGISTRO DE COBRO"
            android:layout_width="300dp"
            android:layout_height="52dp"
            android:id="@+id/textView6" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="50dp" android:layout_marginStart="50dp" android:textSize="30sp"
            android:textColor="#3F51B5" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="50dp"
            android:layout_marginRight="50dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>