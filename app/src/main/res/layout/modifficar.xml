<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".addClientes">

        <TextView
                android:text="TextView"
                android:layout_width="140dp"
                android:layout_height="31dp"
                android:id="@+id/tvNom"
                android:layout_weight="1"
                android:paddingTop="8dp"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/ivEditar"
                tools:text="Nombre" android:layout_marginTop="84dp"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="16dp" android:layout_marginStart="16dp"/>
        <ImageView
                android:id="@+id/ivEditar"
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:srcCompat="@drawable/edit"
                android:scaleType="centerCrop"
                tools:ignore="MissingConstraints"
                android:layout_marginTop="84dp"
                app:layout_constraintTop_toTopOf="parent" android:longClickable="true" android:background="#2196F3"
                app:layout_constraintStart_toEndOf="@+id/tvDeuda" android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"/>
        <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp" app:srcCompat="@drawable/delete"
                android:id="@+id/ivBorrar"
                app:layout_constraintStart_toEndOf="@+id/ivEditar" app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="84dp" android:background="#00BCD4" android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"/>
        <TextView
                android:text="TextView"
                android:layout_width="78dp"
                android:layout_height="28dp"
                android:id="@+id/tvDeuda"
                android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
                tools:text="Deuda"
                app:layout_constraintStart_toEndOf="@+id/tvNom" android:textSize="18sp" android:textStyle="bold"
                android:layout_marginTop="84dp" app:layout_constraintTop_toTopOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>

